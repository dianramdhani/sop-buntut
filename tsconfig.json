{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@ss/*": ["ss/*"],
      "@src/*": ["src/*"],
      "@cookies/*": ["cookies/*"],
      "@logs/*": ["logs/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  }
}
